<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.nh.recyclerview.MovieInfo">

    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTv" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/posterImg" android:layout_marginStart="8dp"
            android:textSize="24sp" android:textStyle="bold" android:textColor="@color/colorPrimary"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="220dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:scaleType="fitXY" android:id="@+id/backdropImg" android:onClick="backBtnOnClick"/>

    <ImageView
            android:layout_width="45dp"
            android:layout_height="30dp" app:srcCompat="?android:attr/actionModeCloseDrawable"
            android:id="@+id/backBtn"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/posterImg"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp"/>


</android.support.constraint.ConstraintLayout>
